<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="500.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pack.Controller">
   <children>
      <HBox>
         <children>
            <Button maxHeight="1.7976931348623157E308" minWidth="100.0" mnemonicParsing="false" text="Button">
               <font>
                  <Font size="14.0" />
               </font>
            </Button>
            <TextField fx:id="server_adr" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" text="localhost:" HBox.hgrow="ALWAYS">
               <font>
                  <Font size="14.0" />
               </font>
            </TextField>
            <Button fx:id="send_button" maxHeight="1.7976931348623157E308" minWidth="100.0" mnemonicParsing="false" onAction="#sendHandler" text="Send">
               <font>
                  <Font size="14.0" />
               </font>
            </Button>
         </children>
      </HBox>
      <SplitPane dividerPositions="0.5" layoutY="100.0" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="422.0" prefWidth="600.0" VBox.vgrow="ALWAYS">
         <items>
            <TextArea fx:id="server_msg" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="449.0" prefWidth="293.0" wrapText="true">
               <font>
                  <Font size="14.0" />
               </font></TextArea>
            <TextArea fx:id="client_msg" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" onKeyReleased="#keyHandler" wrapText="true">
               <font>
                  <Font size="14.0" />
               </font></TextArea>
         </items>
      </SplitPane>
      <HBox prefHeight="23.0" prefWidth="600.0">
         <children>
            <Button fx:id="clear_server_log_button" maxHeight="1.7976931348623157E308" mnemonicParsing="false" onAction="#clear_server_log" prefHeight="28.0" prefWidth="300.0" text="Clear server log">
               <font>
                  <Font size="14.0" />
               </font>
            </Button>
            <Button fx:id="clear_client_log_button" maxHeight="1.7976931348623157E308" mnemonicParsing="false" onAction="#clear_client_log" prefHeight="28.0" prefWidth="301.0" text="Clear client log">
               <font>
                  <Font size="14.0" />
               </font>
            </Button>
         </children>
      </HBox>
   </children>
</VBox>
